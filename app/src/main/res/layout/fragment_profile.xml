<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.profile.ProfileFragment"
    tools:visibility="visible"
    android:background="@color/primary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/img_prof"
            android:layout_width="109dp"
            android:layout_height="123dp"
            android:contentDescription="@string/profile_photo_description"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_24dp" />

        <TextView
            style="@style/HeadingTextMedium"
            android:id="@+id/text_profile"
            android:layout_width="305dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-5dp"
            android:text="@string/profile_name"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/MainTextRegular"
            android:textColor="@color/secondary_variant"
            android:id="@+id/text_profile2"
            android:layout_width="308dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="200dp"
            android:text="@string/profile_email"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_change_profile"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_change_profile"
            android:text="@string/profile_change_button_name"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_exit_profile"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_exit_profile"
            android:text="@string/profile_exit_button_name"
            android:textColor="@color/secondary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
