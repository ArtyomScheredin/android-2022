<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/authorization_start">

    <fragment
        android:id="@+id/navigation_food"
        android:name="com.old.leopards.restaurant.ui.food.FoodFragment"
        android:label="@string/title_food"
        tools:layout="@layout/fragment_food" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.old.leopards.restaurant.ui.cart.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.old.leopards.restaurant.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_fragment_authorization_start"
            app:destination="@id/authorization_start" />
    </fragment>
    <fragment
        android:id="@+id/authorization_start"
        android:name="com.old.leopards.restaurant.authorization_start"
        android:label="fragment_authorization_start"
        tools:layout="@layout/fragment_authorization_start" >
        <action
            android:id="@+id/action_fragment_authorization_start_to_fragment_authorization_login"
            app:destination="@id/authorization_login" />
        <action
            android:id="@+id/action_fragment_authorization_start_to_fragment_authorization_registration"
            app:destination="@id/authorization_registration" />
    </fragment>
    <fragment
        android:id="@+id/authorization_login"
        android:name="com.old.leopards.restaurant.authorization_login"
        android:label="fragment_authorization_login"
        tools:layout="@layout/fragment_authorization_login" >
        <action
            android:id="@+id/action_fragment_authorization_login_to_navigation_food"
            app:destination="@id/navigation_food" />
    </fragment>
    <fragment
        android:id="@+id/authorization_registration"
        android:name="com.old.leopards.restaurant.authorization_registration"
        android:label="fragment_authorization_registration"
        tools:layout="@layout/fragment_authorization_registration" >
        <action
            android:id="@+id/action_fragment_authorization_registration_to_navigation_food"
            app:destination="@id/navigation_food" />
    </fragment>

</navigation>